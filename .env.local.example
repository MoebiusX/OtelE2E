# ============================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ============================================
# Copy this file to .env and fill in values for local development
# These values are for local Docker Compose development ONLY
# ============================================

NODE_ENV=development

# Required secrets (generate your own!)
JWT_SECRET=local-dev-secret-change-me-32chars
DB_PASSWORD=localdevpassword123
KONG_PG_PASSWORD=localkongpass123
RABBITMQ_PASSWORD=localrabbitpass123

# Optional: RabbitMQ URL (constructed from above if not set)
RABBITMQ_URL=amqp://admin:localrabbitpass123@localhost:5672

# Database
DB_HOST=localhost
DB_PORT=5433
DB_NAME=crypto_exchange
DB_USER=exchange

# Kong
KONG_PG_USER=kong
KONG_PG_DATABASE=kong
